<!DOCTYPE html>
<html>
<head><title>Create Event</title></head>
<body>
  <h2>Create Event</h2>
  <form method="POST" action="/api/events">
    <input type="hidden" id="token" name="token">
    <input type="text" name="title" placeholder="Title" required /><br /><br />
    <textarea name="description" placeholder="Description" required></textarea><br /><br />
    <input type="datetime-local" name="dateTime" required /><br /><br />
    <input type="text" name="location" placeholder="Location" required /><br /><br />
    <input type="number" name="totalSeats" placeholder="Total Seats" required /><br /><br />
    <button type="submit">Create</button>
  </form>
  <script>
    // Set token from cookie to hidden field
    document.getElementById('token').value = document.cookie.split('; ')
      .find(row => row.startsWith('token='))
      ?.split('=')[1] || '';
  </script>
</body>
</html>
